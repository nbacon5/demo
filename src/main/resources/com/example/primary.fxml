<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.example.PrimaryController" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10">
   <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

   <Label text="Immigrant First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
   <TextField fx:id="immigrantFirstName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
   
   <Label text="Immigrant Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
   <TextField fx:id="immigrantLastName" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

   <Label text="Immigrant Alien Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
   <TextField fx:id="immigrantAlienNumber" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

   <Label text="Relative First Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
 
   <TextField fx:id="relativeFirstName" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
   
   <Label text="Relative Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
 
   <TextField fx:id="relativeLastName" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

   <Label text="Relative Alien Number:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
 
   <TextField fx:id="relativeAlienNumber" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

   <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="7">
      <Button text="Submit" onAction="#handleSubmitButtonAction"/>
   </HBox>

   <Text fx:id="feedback" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

</GridPane>

